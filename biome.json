{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noAssignInExpressions": "off",
        "noConfusingVoidType": "off",
        "noDoubleEquals": "off"
      },
      "style": {
        "useImportType": "off",
        "useNodejsImportProtocol": "off",
        "noNonNullAssertion": "off"
      },
      "correctness": {
        "noUnreachable": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "include": [
      "src/**/*.ts",
      "scripts/*.js",
      "tests/**/*.ts",
      "schema.graphql",
      "subgraph.moksha.yaml",
      "subgraph.vana.yaml"
    ],
    "ignore": [
      ".github/**",
      "node_modules/**",
      "tests/.bin",
      "tests/.docker/**",
      "tests/.latest.json"
    ]
  }
}
